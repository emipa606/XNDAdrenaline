<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThoughtDef>
        <defName>AdrenalineRush</defName>
        <label>adrenaline rush</label>
        <workerClass>ThoughtWorker_Hediff</workerClass>
        <validWhileDespawned>true</validWhileDespawned>
        <hediff>Adrenaline</hediff>
        <requiredTraits>
            <li>AdrenalineJunkie</li>
        </requiredTraits>
        <stages>

            <li>
                <label>negligible adrenaline rush</label>
                <baseMoodEffect>0</baseMoodEffect>
                <visible>false</visible>
            </li>

            <li>
                <label>slight adrenaline rush</label>
                <description>My heart's starting to get pumping and I'm raring to go.</description>
                <baseMoodEffect>4</baseMoodEffect>
            </li>

            <li>
                <label>moderate adrenaline rush</label>
                <description>This is some good action right here, give me more!</description>
                <baseMoodEffect>8</baseMoodEffect>
            </li>

            <li>
                <label>intense adrenaline rush</label>
                <description>This action is intense! I can feel my hands shaking and blood rushing through my head!</description>
                <baseMoodEffect>12</baseMoodEffect>
            </li>

            <li>
                <label>extreme adrenaline rush</label>
                <description>I feel unstoppable! My heart is pumping so much that it feels like it could explode at any moment!</description>
                <baseMoodEffect>18</baseMoodEffect>
            </li>

        </stages>
    </ThoughtDef>

</Defs>